<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/adminlte/dist/css/adminlte.min.css" />
    <!-- jQuery -->
    <script src="/adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>
<body>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- ///// body 시작 ///// -->
            <!-- msg 사용 범위 설정 시작
            rttr.addFlashAttributes("msg", "삭제되었습니다.");
            -->
            {{#msg}}
                <div class="alert alert-primary alert-dismissible"><!-- 메시지 창 작성 -->
                    {{msg}}
                    <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">Close</button>
                </div>
            {{/msg}}

            <!-- msg 사용 범위 설정 끝 -->
            <table class="table">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                </tr>
                <!-- model.addAttribute("articleEntityList", articleEntityList);-->
                {{#articleEntityList}}
                    <tr>
                        <td>{{id}}</td>
                        <td><a href="/articles/{{id}}">{{title}}</a></td>
                        <td>{{content}}</td>
                    </tr>
                {{/articleEntityList}}
            </table>
            <a href="/articles/new" class="btn btn-primary">New Article</a>
            <!-- ///// body 끝 ///// -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</body>
</html>